<Window x:Class="S3VideoManager.Views.ActivityLogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:chrome="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        mc:Ignorable="d"
        Title="Actividad reciente"
        Width="600"
        Height="500"
        MinWidth="420"
        MinHeight="360"
        Background="{StaticResource WindowBackgroundBrush}"
        WindowStyle="None"
        ResizeMode="CanResize"
        WindowStartupLocation="Manual"
        Icon="pack://application:,,,/Resources/AppIcon.ico">
    <WindowChrome.WindowChrome>
        <chrome:WindowChrome CaptionHeight="0"
                             GlassFrameThickness="0"
                             ResizeBorderThickness="6"
                             UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="{StaticResource TitleBarBrush}"
                BorderBrush="{StaticResource TitleBarBorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="16,0"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <Border Width="26"
                            Height="26"
                            CornerRadius="6"
                            Background="{StaticResource AccentBrush}">
                        <Path Stroke="White"
                              StrokeThickness="2"
                              Data="M4,13 L13,4 M8,2 L2,8" />
                    </Border>
                    <TextBlock Text="Actividad reciente"
                               Foreground="White"
                               FontWeight="SemiBold"
                               Margin="10,0,0,0" />
                </StackPanel>
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button Style="{StaticResource TitleBarCloseButtonStyle}"
                            Click="CloseButton_Click"
                            Content="&#x2715;" />
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1"
                Margin="20"
                CornerRadius="18"
                Background="{StaticResource PanelBackgroundBrush}"
                Padding="24">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel>
                    <TextBlock Text="Actividad reciente"
                               FontSize="22"
                               FontWeight="SemiBold"
                               Foreground="White" />
                    <TextBlock Text="Revisa las ultimas operaciones realizadas."
                               Foreground="#7E8AAE"
                               Margin="0,6,0,0" />
                </StackPanel>

                <Border Grid.Row="1"
                        Background="{StaticResource PanelSecondaryBrush}"
                        CornerRadius="14"
                        Padding="16"
                        Margin="0,16,0,16">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding ActivityLog}"
                                  HorizontalContentAlignment="Stretch">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Path=., Mode=OneWay}"
                                         Margin="0,4"
                                         Foreground="#9DA9CE"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Padding="0"
                                         IsReadOnly="True"
                                         Cursor="IBeam"
                                         HorizontalAlignment="Stretch"
                                         TextWrapping="Wrap"
                                         VerticalAlignment="Stretch"
                                         IsReadOnlyCaretVisible="False"
                                         FocusVisualStyle="{x:Null}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button Content="Cerrar"
                            Width="140"
                            Click="CloseButton_Click" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
