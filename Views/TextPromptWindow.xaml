<Window x:Class="S3VideoManager.Views.TextPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Loaded="Window_OnLoaded">
    <Border CornerRadius="14"
            Background="#1B1F2D"
            Padding="24"
            MinWidth="360">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" Opacity="0.35" ShadowDepth="0" Color="#000000"/>
        </Border.Effect>
        <StackPanel>
            <TextBlock x:Name="TitleText"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="White"
                       Text="TÃ­tulo"/>
            <TextBlock x:Name="PromptText"
                       Margin="0,6,0,0"
                       Foreground="#AFC5FF"
                       TextWrapping="Wrap"
                       Text="Mensaje"/>
            <TextBox x:Name="InputBox"
                     Margin="0,18,0,4"
                     Height="36"
                     MinWidth="320"
                     Background="#252C3F"
                     Foreground="White"
                     BorderBrush="#3F5BD8"
                     BorderThickness="1.2"
                     Padding="8,4"
                     KeyDown="InputBox_OnKeyDown"/>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,10,0,0">
                <Button Content="Cancelar"
                        Width="90"
                        Height="32"
                        Margin="0,0,8,0"
                        Click="Cancel_Click"/>
                <Button Content="Aceptar"
                        Width="100"
                        Height="32"
                        Click="Accept_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
